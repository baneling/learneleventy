{% assign previousPost = collections.post | getPreviousCollectionItem %}
{% assign nextPost = collections.post | getNextCollectionItem %}

<div class="blog-pagination">
    <div class="button">
        {% if previousPost %}Previous: <a href="{{previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}
    </div>
    <div class="button">
        {% if nextPost %}Next: <a href="{{nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}
    </div>
</div>
