              "{%if description %}{{description}}
                {%else%}{{site.description}}
                {%endif%}">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ '/assets/css/tailwind.css' | url }}">
